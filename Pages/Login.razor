

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="login-container">

                <h2 class="text-center mb-4">Login</h2>

                <div>
                    <section>
                        <form id="account" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                            <div class="form-floating mb-3">
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                <label asp-for="Input.Email" class="form-label">Email</label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3">
                                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                                <label asp-for="Input.Password" class="form-label">Password</label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="checkbox mb-3">
                                <label asp-for="Input.RememberMe" class="form-label ps-2 mb-0">
                                    <input class="form-check-input" asp-for="Input.RememberMe" />
                                    @* @Html.DisplayNameFor(m => m.Input.RememberMe) *@
                                </label>
                            </div>
                            <div>
                                <a class="mt-0" id="forgot-password" asp-page="./ForgotPassword"><span style="text-decoration: underline; color: black; font-size: 15px;">Forget Password</span></a>
                                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-dark mt-3">Log in</button>
                            </div>
                            <div>
                               <button class="btn btn-link nav-link text-dark" @onclick="ToSignUp">
                                    <span style="font-size: 10px; color: black; text-decoration: underline;">New to FashionNest? Sign Up Here</span>
                               </button>
                               @*  <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">
                                    <span style="font-size: 10px; color: black; text-decoration: underline;">New to FashionNest? Sign Up Here</span>
                                </a> *@
                               <a id="resend-confirmation" asp-page="./ResendEmailConfirmation"><span style="color:black">Resend email confirmation</span></a>
                                
                            </div>  

                          
                        </form>
                    </section>
                </div>


            </div>
        </div>
    </div>
</div>




@code {
    [Parameter]
    public bool signup { get; set; }
    public void ToSignUp()
    {
        signup =!signup;
    }
}